# Production Environment Variables for AWS Deployment
# Copy this file to /etc/ecovale-hr/.env on your EC2 instance
# NEVER commit actual values to Git!

# Server Configuration
SERVER_PORT=8080

# AWS RDS Database Configuration
# Format: jdbc:mysql://[RDS_ENDPOINT]:3306/[DATABASE_NAME]?useSSL=true&requireSSL=true
DATABASE_URL=jdbc:mysql://your-rds-instance.xxxxx.us-east-1.rds.amazonaws.com:3306/ecovale_hr?useSSL=true&requireSSL=true&serverTimezone=UTC
DATABASE_USERNAME=ecovale_admin
DATABASE_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!

# Database Pool Configuration
DB_POOL_SIZE=20
DB_MIN_IDLE=5

# JWT Configuration (CRITICAL - Use strong secrets!)
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_SECRET_MINIMUM_64_CHARACTERS_OR_MORE
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# CORS Configuration
# Add your frontend domain(s) here
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://hr.yourdomain.com

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_STRONG_ADMIN_PASSWORD

# Logging Configuration
LOG_FILE_PATH=/var/log/ecovale-hr/application.log

# AWS Specific (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# SSL Configuration (if using)
# SSL_KEYSTORE_PATH=/etc/ecovale-hr/keystore.p12
# SSL_KEYSTORE_PASSWORD=your-keystore-password

# Spring Profile
SPRING_PROFILES_ACTIVE=prod
